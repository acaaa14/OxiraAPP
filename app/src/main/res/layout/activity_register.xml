<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- ================= KATEGORI ================= -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategori Pengguna"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <Spinner
            android:id="@+id/spKategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- ================= UPLOAD KTP ================= -->
        <Button
            android:id="@+id/btnUploadKtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Foto KTP"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <ImageView
            android:id="@+id/imgKtpPreview"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:background="#EAEAEA"
            android:layout_marginBottom="12dp" />

        <!-- ================= NAMA ================= -->
        <EditText
            android:id="@+id/etNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Lengkap"
            android:inputType="textPersonName"
            android:imeOptions="actionNext"
            android:layout_marginBottom="8dp" />

        <!-- ================= NIK ================= -->
        <EditText
            android:id="@+id/etNik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NIK (16 Digit)"
            android:inputType="number"
            android:maxLength="16"
            android:imeOptions="actionNext"
            android:layout_marginBottom="8dp" />

        <!-- ================= TTL ================= -->
        <EditText
            android:id="@+id/etTtl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tempat, Tanggal Lahir"
            android:imeOptions="actionNext"
            android:layout_marginBottom="8dp" />
        <EditText
            android:id="@+id/etNamaPerusahaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Perusahaan"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/etPenanggungJawab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Penanggung Jawab"
            android:visibility="gone"/>


        <!-- ================= ALAMAT ================= -->
        <EditText
            android:id="@+id/etAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alamat Lengkap"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:gravity="top"
            android:imeOptions="actionNext"
            android:layout_marginBottom="8dp" />

        <!-- ================= NO HP ================= -->
        <EditText
            android:id="@+id/etNoHp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nomor HP"
            android:inputType="phone"
            android:imeOptions="actionNext"
            android:layout_marginBottom="12dp" />

        <!-- ================= EMAIL ================= -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            android:layout_marginBottom="8dp" />

        <!-- ================= PASSWORD ================= -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:layout_marginBottom="20dp" />

        <!-- ================= BUTTON ================= -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daftar" />

    </LinearLayout>
</ScrollView>
